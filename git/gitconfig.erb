# gitconfig
[user]
    name = <%= `cat ~/tmp/info/name`.chomp %>
    email = <%= `cat ~/tmp/info/email`.chomp %>

[http]
    sslverify = false

[advice]
    pushNonFastForForward = false
    statusHints = false

[diff]
    renames = copies
    mnemonicprefix = true

[merge]
    stat = true

[push]
    default = upstream

[apply]
    whitespace = fix

[core]
    filemode = false
    excludesfile = ~/.gitignore
    pager = less -+$LESS -S

[color]
    status = auto
    branch = auto
    interactive = auto
    diff = auto
    ui = true
    pager = true

[alias]
    st = status
    d = diff
    dfm = difftool -y -t FileMerge
    dv = difftool -y -t vimdiff
    ds = diff --staged
    sm = submodule
    smu = submodule update --init
    ci = commit
    chout = checkout
    gl = log --graph --pretty=format:'%Cred%h%Creset - %Cblue%an%Creset - %C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    l = log --pretty=format:'%C(yellow)%h%Creset - %Cblue%an%Creset - %C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    lf = !git l --follow -p
    ls = !git l -G
    pr = pull --rebase

[difftool "FileMerge"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
