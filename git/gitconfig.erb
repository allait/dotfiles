# gitconfig
[user]
    name = <%= `cat ~/tmp/info/name`.chomp %>
    email = <%= `cat ~/tmp/info/email`.chomp %>

[advice]
    pushNonFastForForward = false
    statusHints = false

[diff]
    renames = copies
    mnemonicprefix = true

[merge]
    stat = true

[push]
    default = upstream

[apply]
    whitespace = fix

[core]
    filemode = false
    precomposeunicode = true
    excludesfile = ~/.gitignore
    pager = less -S

[color]
    status = auto
    branch = auto
    interactive = auto
    diff = auto
    ui = true
    pager = true

[alias]
    st = status
    ci = commit
    chout = checkout

    d = diff
    ds = diff --cached

    pull = pull --ff-only
    pr = pull --rebase

    vdiff = difftool -t vimdiff
    vmerge = mergetool -t vimdiff
    ksdiff = difftool -y -t Kaleidoscope
    ksmerge = mergetool -y -t Kaleidoscope

    sm = submodule
    smu = submodule update --init --rebase

    # aliasing "la = !git l" results in "died of signal 13" warning
    <% log_args = "--graph --pretty=format:'%Cred%h%Creset - %Cblue%an%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative" %>
    l = log <%= log_args %>
    la = log <%= log_args %> --all
    lf = !git l --follow -p

[difftool "FileMerge"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"

[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
