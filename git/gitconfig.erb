# gitconfig
[user]
    name = <%= `cat ~/tmp/info/name`.chomp %>
    email = <%= `cat ~/tmp/info/email`.chomp %>

[advice]
    pushNonFastForForward = false
    statusHints = false

[diff]
    renames = copies
    mnemonicprefix = true

[merge]
    stat = true

[push]
    default = upstream

[apply]
    whitespace = fix

[core]
    filemode = false
    precomposeunicode = true
    excludesfile = ~/.gitignore
    pager = less -+$LESS -S

[color]
    status = auto
    branch = auto
    interactive = auto
    diff = auto
    ui = true
    pager = true

[alias]
    pull = pull --ff-only
    st = status
    d = diff
    vdiff = difftool -t vimdiff
    vmerge = mergetool -t vimdiff
    kdiff = difftool -y -t Kaleidoscope
    kmerge = mergetool -y -t Kaleidoscope
    ds = diff --staged
    sm = submodule
    smu = submodule update --init --rebase
    ci = commit
    chout = checkout
    gl = log --graph --pretty=format:'%Cred%h%Creset - %Cblue%an%Creset - %C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    l = log --pretty=format:'%C(yellow)%h%Creset - %Cblue%an%Creset - %C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    lf = !git l --follow -p
    ls = !git l -G
    pr = pull --rebase

[difftool "FileMerge"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"

[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
