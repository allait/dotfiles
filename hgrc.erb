[ui]
username = <%= print("Name: "); STDOUT.flush; STDIN.gets.chomp %> <<%= print("Email: "); STDOUT.flush; STDIN.gets.chomp %>>

[extensions]
color =
mq =
pager =
graphlog =
fetch =
transplant =
bookmarks =
bisect =

[pager]
pager = LESS='FSRX' less
attend =
ignore = commit

[alias]
l = log --template '\x1b[33m{rev}\x1b[0m - \x1b[34m{author|person}\x1b[0m - \x1b[31m{branches}\x1b[0m {desc|firstline} \x1b[32m({date|age})\x1b[0m\n'
gl = l -G
show = log --patch --rev 

[diff]
git = True
