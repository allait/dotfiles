[ui]
username = <%= `cat ~/tmp/info/name`.chomp %> <<%= `cat ~/tmp/info/email`.chomp %>>
merge = internal:merge

[extensions]
color =
mq =
pager =
graphlog =
fetch =
transplant =
bookmarks =
bisect =
record =
rebase =
progress =
extdiff =

[pager]
pager = LESS='FSRX' less
attend = annotate, cat, diff, export, glog, help, log, qdiff, status, tip, l, gl, show

[alias]
l = log --template '\x1b[33m{rev}\x1b[0m - \x1b[34m{author|person}\x1b[0m - \x1b[31m{branches}\x1b[0m {desc|firstline} \x1b[32m({date|age})\x1b[0m\n'
gl = l -G
show = log --patch --rev

# Do not track, but leave file
untrack = rm -Af

# Empty the current MQ patch
qempty = !$HG qrefresh -X `$HG root`

[bookmarks]
track.current = True

[diff]
git = True

[extdiff]
cmd.opendiff = fmdiff
