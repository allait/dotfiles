[ui]
username = <%= `cat ~/tmp/info/name`.chomp %> <<%= `cat ~/tmp/info/email`.chomp %>>

[extensions]
color =
mq =
pager =
graphlog =
fetch =
transplant =
bookmarks =
bisect =
record =

[pager]
pager = LESS='FSRX' less
attend = annotate, cat, diff, export, glog, help, log, qdiff, status, tip, l, gl

[alias]
l = log --template '\x1b[33m{rev}\x1b[0m - \x1b[34m{author|person}\x1b[0m - \x1b[31m{branches}\x1b[0m {desc|firstline} \x1b[32m({date|age})\x1b[0m\n'
gl = l -G
show = log --patch --rev 
untrack = rm -Af

[bookmarks]
track.current = True

[diff]
git = True
