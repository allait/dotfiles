# gitconfig
[user]
    name = <%= print("Name: "); STDOUT.flush; STDIN.gets.chomp %>
    email = <%= print("Email: "); STDOUT.flush; STDIN.gets.chomp %>

[http]
    sslverify = false

[advice]
    pushNonFastForForward = false
    statusHints = false

[diff]
    renames = copies
    mnemonicprefix = true

[merge]
    stat = true

[apply]
    whitespace = fix

[core]
    filemode = false
    excludefile = ~/.gitignore

[color]
    status = auto
    branch = auto
    interactive = auto
    diff = auto
    ui = true
    pager = true

[alias]
    st = status
    d = diff
    ds = diff --staged
    sm = submodule
    smu = submodule update --init
    ci = commit
    co = checkout
    gl = log --graph --pretty=format:'%Cred%h%Creset - %Cblue%an%Creset - %C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    l = log --pretty=format:'%C(yellow)%h%Creset - %Cblue%an%Creset - %C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    lf = !git l --follow -p
