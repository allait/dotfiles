# gitconfig
[user]
    name = <%= print("Name: "); STDOUT.flush; STDIN.gets.chomp %>
    email = <%= print("Email: "); STDOUT.flush; STDIN.gets.chomp %>

[http]
    sslverify = false

[giggle]
    main-window-maximized = false
    main-window-geometry = 1242x781+312+65
    history-view-vpane-position = 455
    main-window-view = HistoryView
    file-view-vpane-position = 385

[core]
    editor = vim
    filemode = false
[merge]
    tool = diffuse

[color]
    status = auto
    branch = auto
    interactive = auto
    diff = auto
    ui = true
[format]
    short =  %Cred%h%Creset - %Cblue%an%Creset - %C(yellow)%d%Creset %s %Cgreen(%cr)%Creset

[alias]
    st = status
    ci = commit
    co = checkout
    glog = log --graph --pretty=format:'%Cred%h%Creset - %Cblue%an%Creset - %C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    l = log --pretty=format:'%C(yellow)%h%Creset - %Cblue%an%Creset - %C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
