snippet select "Select statement" 
SELECT ${1:*} FROM ${2:table}$0;
endsnippet

snippet join "Inner join tables"
${1:table_one} INNER JOIN ${2:table_two} ON $1.${3:field_id} = $2.${4:id}
endsnippet

snippet create "Create table statement" b
DROP TABLE IF EXISTS ${1:name};
CREATE TABLE $1 (
	$0
);
endsnippet

