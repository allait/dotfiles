snippet os:dir "This file directory"
os.path.dirname(os.path.abspath(${1:__file__}))$0
endsnippet

snippet log:conf "Setup basic logger"
logging.basicConfig(filename='${1:log/error.log}',
					level=logging.${2:DEBUG},
					format='%(asctime)s %(levelname)-8s %(message)s',
					datefmt='%a, %d %b %Y %H:%M:%S')$0
endsnippet
