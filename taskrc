# Taskwarrior program configuration file.

# Files
edit.verbose=no

# Date
weekstart=Monday
dateformat=d/m/Y
dateformat.annotation=d/m/Y
dateformat.report=d/m/Y

# Color theme
include /usr/local/share/doc/task/rc/dark-256.theme

# Task sorting
report.ls.sort=project+,priority-,description+

# Don't show annotations in ls
report.ls.annotations=none
